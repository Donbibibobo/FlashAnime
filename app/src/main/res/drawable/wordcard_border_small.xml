<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/new_secondary"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <item android:left="6dp"
        android:top="6dp"
        android:right="6dp"
        android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/new_accent"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>

    <item android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/new_secondary"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

</layer-list>
